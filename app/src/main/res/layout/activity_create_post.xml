<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title_of_post"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:background="#11000000"
            android:hint="Post Title"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"/>

        <EditText
            android:id="@+id/description_of_post"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#11000000"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="Post Description"/>

        <EditText
            android:id="@+id/raised_amount_of_post"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#11000000"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="Amount Raised"/>

        <EditText
            android:id="@+id/required_amount_of_post"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#11000000"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="Amount Required"/>

        <Button
            android:id="@+id/post_image_upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:text="@string/choose"
            />

        <ProgressBar
            android:id="@+id/progress_circular_post"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/post_image_container"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            android:layout_gravity="center"
            android:src="@drawable/ic_insert_photo_black_24dp"
            />


    </LinearLayout>

</ScrollView>