<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingStart="50dp"
    android:paddingEnd="50dp"
    android:paddingBottom="50dp"
    tools:context=".ChangePassword">

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />

    <ProgressBar
        android:id="@+id/change_progress_circular"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_below="@id/donor_confirm_passcode"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/donor_old_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/old_password"
        android:layout_below="@id/logo_app"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:inputType="textPassword"
        android:background="#11000000"
        />

    <EditText
        android:id="@+id/donor_new_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/new_password"
        android:textColorHint="@android:color/white"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:layout_below="@+id/donor_old_password"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:background="#11000000"
        />

    <EditText
        android:id="@+id/donor_confirm_passcode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/title_confirm_pass"
        android:textColorHint="@android:color/white"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:layout_below="@+id/donor_new_password"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:background="#11000000"
        />

    <Button
        android:id="@+id/donor_change_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:background="@drawable/button"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>