<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingEnd="40dp"
    android:paddingStart="40dp"
    android:paddingBottom="40dp"
    android:background="@drawable/gradient">

    <ProgressBar
        android:id="@+id/ngo_login_progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_above="@id/ngo_login"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/login_ngo_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />

    <EditText
        android:id="@+id/ngo_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/title_email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/login_ngo_logo"
        android:background="#11000000"
        android:layout_marginTop="15dp"
        android:textColorHint="@android:color/white"
        android:drawableStart="@drawable/ic_email"
        android:textColor="@android:color/white"
        />

    <EditText
        android:id="@+id/ngo_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:hint="@string/title_password"
        android:background="#11000000"
        android:layout_below="@+id/ngo_email"
        android:layout_marginTop="10dp"
        android:textColorHint="@android:color/white"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/ngo_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ngo_password"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/ngo_register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ngo_login"
        android:textColor="@android:color/white"
        android:text="@string/haven_t_an_account_create_here"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ngo_register_link"
        android:textColor="@android:color/white"
        android:text="@string/forgot_password"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>